<% if signed_in? %>
    <div class="row">
        <aside class="span4">
            <section>
                <%= render "shared/user_info" %>
            </section>
            <section>
                <%= render "shared/stats" %>
            </section>
            <section>
                <%= render "shared/micropost_form" %>
            </section>
        </aside>
        <div class="r_div">
            <h3>Micropost Feed</h3>
            <%= render 'shared/feed' %>
        </div>
    </div>
<% else %>
<div class="center hero-unit">
  <h1>Welcome to the Sample App</h1>
     <h2>This is home page for the
       <%= link_to "Text home page", '#' %>
       sample application
    </h2>
    <%= link_to "Sing up now", signup_path , class: "btn btn-large btn-primary" %>
</div>
<%= image_tag('/Ruby_on_Rails_logo.jpg', size: "60x70", alt: "Rails") %>
<% end %>